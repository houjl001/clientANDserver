{
  "apps" : [{
    // General
    "name": "americano-website",
    "script": "index.js",
    // "interpreter_args": "--harmony",
    "node_args": "",
    // Advanced features
    "instances": 4,
    "exec_mode": "cluster",
    "watch": "true",
    "ignoreWatch" : ["[\\/\\\\]\\./", "node_modules", "logs"],
    "max_memory_restart": "1024M",
    "env": {
      "NODE_ENV": "development"
    },
    "env_test": {
      "NODE_ENV": "test",
      "PORT": "24000"
    },
    "env_production": {
      "NODE_ENV": "production",
      "PORT": "24000",
      "HTTP_PROXY": "http://172.17.20.121:23128",
      "NO_PROXY": "172.17.20.92,172.17.20.66,172.17.20.81,172.17.20.121"
    },
    // Log files
    "log_date_format"  : "YYYY-MM-DD HH:mm:ss",
    "out_file": "./logs/pm2-out.log",
    "error_file": "./logs/pm2-err.log",
    "pid_file": "./logs/americano-site.pid",
    "merge_logs": true
  }]
}
